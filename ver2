    private void jButton2ActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_jButton2ActionPerformed
        // TODO add your handling code here:
        int d=0,n=0;
        SimpleDateFormat formatDate = new SimpleDateFormat("dd/MM/yyyy");
        java.util.Date date1 = null;
        try {
            date1 = formatDate.parse(jTextField2.getText());
        } catch (ParseException ex) {
            JOptionPane.showMessageDialog(null, "Invalid Date", "Error", JOptionPane.ERROR_MESSAGE);
            d=1;
        }
        java.sql.Date sqlDate = new java.sql.Date(date1.getTime());
        try{
            Integer.parseInt(jTextField3.getText());
        }catch (Exception ex) {
            JOptionPane.showMessageDialog(null, "experience is invalid. Enter a number", "Error", JOptionPane.ERROR_MESSAGE);
            n=1;
        }
        if(d==1)
        {
            jTextField2.setText(null);
        }
 else if (n==1)
        {
            jTextField3.setText(null);
        }
 else{
        try{
                Connection conn = null;
		String driverName = "oracle.jdbc.OracleDriver";
		String url = "jdbc:oracle:thin:@127.0.0.1:1521:XE";
		Class.forName(driverName);
		conn = DriverManager.getConnection(url, "system", "sowmi");
                CallableStatement vStatement = conn.prepareCall( "{ ? = call insert_application( ?,?,?,?,?,?,?,?,?,? ) }" );
		vStatement.setString( 2, id);
                vStatement.setString( 3, jTextField1.getText());
                vStatement.setDate( 4, sqlDate);
                vStatement.setString( 5, jComboBox1.getSelectedItem().toString());
                vStatement.setString( 6, jTextField4.getText());
		vStatement.setString( 7, jTextField3.getText());
                vStatement.setString( 8, jTextField6.getText());
                vStatement.setString( 9, jTextArea2.getText());
                vStatement.setString( 10, jTextArea1.getText());
                vStatement.setString( 11, jComboBox2.getSelectedItem().toString());
                vStatement.registerOutParameter( 1, Types.VARCHAR );
		vStatement.executeUpdate();
		String result = vStatement.getString( 1 );

                if(result.equals("0"))
                {
                    JOptionPane.showMessageDialog(null, "Application Submitted","Success" ,JOptionPane.PLAIN_MESSAGE);
                    setVisible(false);
                    new ResponceForm(id, "Application submitted. Come back later").setVisible(true);
                }
         }catch (Exception ex) {
            JOptionPane.showMessageDialog(null, ex, "Error", JOptionPane.ERROR_MESSAGE);
        }
        }
    }//GEN-LAST:event_jButton2ActionPerformed

